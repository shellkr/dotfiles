##
## bspwm hotkeys
##

## make sxhkd reload its configuration files:
super + shift + Escape
    pkill -USR1 -x sxhkd

## Quit
super + alt + Escape
    pkill panel;bspc quit

## Close window
super + Escape
    bspc window -c

## Toggle layout between monocle and tiled
super + n
    bspc desktop -l next

## Balance (in size) the desktop/workspace
super + b
    bspc desktop -B

## Toggle floating or fullscreen
super + {t,p,z,f}
    bspc window -t {tiled,pseudo_tiled,floating,fullscreen}

#super + {t,z,shift + t,f}
#    bspc node -t '~{tiled,floating,pseudo_tiled,fullscreen}'

## Toggle last focused windows or workspace/desktop back-and-forth (ยง,tab)
super + {paragraph,Tab}
    bspc {window,desktop} -f last

## Move to previous or next desktop/workspace
alt + shift {1,2}
    bspc desktop -f {prev,next}

## Move selected window to the biggest window
super + m
    bspc window -s biggest

## Focus or move window left,down,up,right
super + {_,shift + }{a,s,w,d}
    bspc window -{f,s} {left,down,up,right}

## Focus window next or prev
super + {_,shift + }c
    bspc window -f {next,prev}

super + {_,shift + }r
    bspc desktop -R 90

## Circulate leaves of the tree backward or forward
super + {comma,period}
    bspc desktop -C {backward,forward}

## Cut the window at...
super + ctrl + {a,s,w,d}
    bspc window -p {left,down,up,right}

## Cancels a cut
super + ctrl + {_,shift + }Escape
    bspc {window -p cancel,desktop -c}

## Resize the window 
super + alt + {a,s,w,d}
    bspc window -e {left -10,down +10,down -10,left +10}

## Set the split ratio...
super + ctrl + {1-9}
    bspc window -r 0.{1-9}

## Focus the given desktop or move a window to a given desktop
super + {_,shift + }{1-9,0}
    bspc {desktop -f,window -d} '^{1-9,10}'

## Move or rezise depending on the mouse button.
super + button{1-3}
    ; bspc pointer -g {move,resize_side,resize_corner}

## Track the mouse pointer
super + !button{1-3}
    bspc pointer -t %i %i

##
## wm independent hotkeys
##

super + Return
    urxvtc

super + space
#     j4-dmenu-desktop --convert=lowercase "dmenu -fn 'Pragmata Pro-8'"
    dmenu_run -dim 0.85 -dc "#222222"

button8
	xdotool key 115	

button9
	xdotool key 110	

button10
	xdotool key Tab	

ctrl + space
	bashrun2

alt + space
	/usr/bin/clipmenu

shift + alt + space
	/usr/bin/vendor_perl/dmenurl

## Media keys
XF86AudioRaiseVolume
	pactl set-sink-volume 0 +5%

XF86AudioLowerVolume
	pactl set-sink-volume 0 -- -5%

XF86AudioMute
	amixer -q set Master toggle

